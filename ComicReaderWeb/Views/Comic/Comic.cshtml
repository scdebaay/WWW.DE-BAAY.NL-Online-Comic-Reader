@model ComicReaderWeb.Models.Comic
@{
    Layout = null;
}
@{
    var comic = new ComicReaderWeb.Models.Comic()
    {
        size = Model.size,
        page = Model.page,
        requestedFolder = Model.requestedFolder,
        requestedFile = Model.requestedFile
    };
}
<!DOCTYPE html>
<html>
<head>
    <title>Comic</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div id="header">@Html.ActionLink("Home", "Index", "Home")</div>
    <div id="page">
        <div id="prevButton">
            @Html.ActionLink("Previous", "Read", new { @folder = comic.requestedFolder, @file = comic.requestedFile, @page = comic.Previous }, null)
        </div>
        <div id="content">
            <img width="@comic.size"alt="Comic" src="@ViewBag.ImageSource" />
        </div>
        <div id="nextButton">
            @Html.ActionLink("Next", "Read", new { @folder = comic.requestedFolder, @file = comic.requestedFile, @page = comic.Next }, null)
        </div>
    </div>
</body>
</html>
